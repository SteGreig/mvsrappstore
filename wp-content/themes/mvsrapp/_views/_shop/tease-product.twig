{{ fn('timber_set_product', post) }}

{# PRODUCT DATA #}
{% set product_img = post.thumbnail.src('full') %}
{% set price = post._regular_price != '' ? post._regular_price|number_format %}
{% set sale_price = post._sale_price|number_format %}

<div class="product-tile flex p-1 md:p-2 lg:p-4 2xl:p-6 w-1/2 md:w-1/3">

	<div class="bg-noir-300 relative flex flex-col">

		<a href="{{ post.link }}">
			{# <img src="{{product_img|resize(600,600)}}" alt=""> #}
			{% do action('woocommerce_before_shop_loop_item_title') %}
		</a>

		<div class="p-3 md:p-6 lg:p-8 flex-1 flex flex-col items-start">
			{% if post.title %}
				<h3 class="font-medium text-base/snug md:text-lg/snug lg:text-xl/snug mb-3 md:mb-5">
					<a href="{{ post.link }}">{{ post.title }}</a>
				</h3>
			{% endif %}

			{% do action( 'woocommerce_after_shop_loop_item_title' ) %}
			{% do action( 'woocommerce_after_shop_loop_item' ) %}
		</div>

	</div>
	
</div>
