{% extends "_layout/base.twig" %}

{% block content %}

<div class="container px-4">

  <main class="w-full">

    <div class="px-1 mb-5 lg:mb-8">
      <h1 class="text-highlight font-semibold w-full text-center md:text-lg lg:text-xl xl:text-2xl">{{post.title}}</h1>
    </div>

    <div class="w-full max-w-[850px] mx-auto bg-noir-400 rounded-md p-4 sm:p-8 md:p-12">
      {% do action('woocommerce_before_shop_loop') %}
      <div class="copy">
        {{post.content}}
      </div>
    </div>

  </main>

</div>

{% endblock %}